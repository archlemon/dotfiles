{
    {{ if eq .chezmoi.hostname "matt-b650iax" }}
    "output": "DP-2",
    {{ end }}
    "layer": "top",
    "position": "top",
    "modules-left": [
        "hyprland/workspaces",
        "custom/music"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "cpu",
        "memory",
        "temperature",
        "pulseaudio",
        {{ if eq .chezmoi.hostname "matt-z13" }}
        "backlight",
        "battery",
        {{ end }}
        "tray",
        "custom/power"
    ],
    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": false,
        "icon-size": 21,
        // "format": " {icon} ",
        "format":"{id}",
        "active-only": true,
        // "format-icons": {
        //     "default": "",
        // },
        "on-scroll-up": "hyprctl dispatch workspace e-1",
        "on-scroll-down": "hyprctl dispatch workspace e+1"
     },
    "tray": {
        "icon-size": 21,
        "spacing": 5,
        "show-if-empty": false,
        "show-passive-items": false,
    },
    "custom/music": {
        "format": " {}",
        "escape": true,
        "interval": 5,
        "tooltip": false,
        "exec": "playerctl metadata --format='{{ "{{" }} title {{ "}}" }}'",
        "on-click": "playerctl play-pause",
        "max-length": 50
    },
    "clock": {
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format": "{:%a %d %B %H:%M}"
    },
    "backlight": {
        {{ if eq .chezmoi.hostname "matt-z13" }}
        "device": "amdgpu_bl1",
        "on-click": "brightnessctl -d amdgpu_bl1 set 100%",
        "on-click-middle": "brightnessctl -d amdgpu_bl1 set 50%",
        "on-click-right": "brightnessctl -d amdgpu_bl1 set 0%",
        {{ else }}
        "device": "intel_backlight",
        "on-click": "brightnessctl -d intel_backlight set 100%",
        "on-click-middle": "brightnessctl -d intel_backlight set 50%",
        "on-click-right": "brightnessctl -d intel_backlight set 0%",
        {{ end }}
        "format": "{icon}",
        "format-icons": ["", "", "", "", "", "", "", "", ""],
        "tooltip": true,
        "tooltip-format": "{percent}%",
        "scroll-step": 5,
    },
    "battery": {
        "bat": "BAT0",
        "adaptor": "AC0",
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{icon}",
        "format-charging": "󱐋",
        "format-plugged": "",
        "format-alt": "{icon}",
        "format-icons": ["", "", "", "", ""]
    },
    "cpu": {
        "format": " {usage}%",
        // "tooltip": false
        "interval": 2,
    },
    "memory": {
        "format": " {}%",
        "interval": 2,
    },
    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "hwmon-path": [
            "/sys/class/hwmon/hwmon3/temp1_input",
            "/sys/class/hwmon/hwmon3/temp2_input",
        ],
        "critical-threshold": 75,
        // "format-critical": "{temperatureC}°C {icon}",
        "format": "{icon} {temperatureC}°C",
        "format-icons": ["", "", "", "", ""],
        "interval": 2,
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{icon}{volume}%",
        "format-muted": "",
        "format-icons": {
            "default": ["", "", " "]
        },
        "on-click": "pavucontrol"
    },
    "custom/lock": {
        "tooltip": false,
        "on-click": "sh -c '(sleep 0.5s; swaylock --grace 0)' & disown",
        "format": "",
    },
    "custom/power": {
        "tooltip": false,
        "on-click": "hyprctl dispatch exit",
        "format": "⏻"
    }
}
