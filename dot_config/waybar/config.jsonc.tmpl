{
    {{ if eq .chezmoi.hostname "matt-b650iax" }}
    "output": "DP-2",
    {{ else if eq .chezmoi.hostname "framework" }}
    "output": "DP-4",
    {{ end }}
    "layer": "top",
    "position": "top",
    "modules-left": [
        "hyprland/workspaces",
        "custom/music"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "tray",
        "cpu",
        "memory",
        //"temperature",
        "custom/temp",
        "pulseaudio",
        {{ if eq .chezmoi.hostname "matt-z13" }}
        "backlight",
        "battery",
        {{ end }}
        "bluetooth",
        "custom/vpn",
        "network#wifi",
        "network#wired",
        "custom/mouse-accel",
        "custom/power",
    ],
    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": false,
        "icon-size": 21,
        // "format": " {icon} ",
        "format":"{id}",
        "active-only": true,
        // "format-icons": {
        //     "default": "",
        // },
        "on-scroll-up": "hyprctl dispatch workspace e-1",
        "on-scroll-down": "hyprctl dispatch workspace e+1"
     },
    "tray": {
        "icon-size": 21,
        "spacing": 5,
        "show-if-empty": false,
        "show-passive-items": false,
    },
    "custom/music": {
        "format": " {}",
        "escape": true,
        "interval": 5,
        "tooltip": false,
        "exec": "playerctl metadata --format='{{ "{{" }} title {{ "}}" }}'",
        "on-click": "playerctl play-pause",
        "max-length": 50
    },
    "clock": {
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format": "{:%a %d %b %H:%M}"
    },
    "backlight": {
        {{ if eq .chezmoi.hostname "matt-z13" }}
        "device": "amdgpu_bl1",
        "on-click": "brightnessctl -d amdgpu_bl1 set 100%",
        "on-click-middle": "brightnessctl -d amdgpu_bl1 set 50%",
        "on-click-right": "brightnessctl -d amdgpu_bl1 set 0%",
        {{ else }}
        "device": "intel_backlight",
        "on-click": "brightnessctl -d intel_backlight set 100%",
        "on-click-middle": "brightnessctl -d intel_backlight set 50%",
        "on-click-right": "brightnessctl -d intel_backlight set 0%",
        {{ end }}
        "format": "{icon}",
        "format-icons": ["", "", "", "", "", "", "", "", ""],
        "tooltip": true,
        "tooltip-format": "{percent}%",
        "scroll-step": 5,
    },
    "battery": {
        "bat": "BAT0",
        "adaptor": "AC0",
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{icon}",
        "format-charging": "󱐋",
        "format-plugged": "",
        "format-alt": "{icon}",
        "format-icons": ["", "", "", "", ""],
        "tooltip-format": "{capacity}%\n{timeTo}\n{power}w",
    },
    "cpu": {
        "format": " {usage}%",
        // "tooltip": false
        "interval": 2,
    },
    "memory": {
        "format": " {}%",
        "interval": 2,
        "tooltip-format": "{total:0.1f}GB total\n{used:0.1f}GB used\n{percentage}%",
    },
    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "hwmon-path": [
            "/sys/class/hwmon/hwmon3/temp1_input",
            "/sys/class/hwmon/hwmon3/temp2_input",
        ],
        "critical-threshold": 75,
        // "format-critical": "{temperatureC}°C {icon}",
        "format": "{icon} {temperatureC}°C",
        "format-icons": ["", "", "", "", ""],
        "interval": 2,
    },
    "custom/temp": {
        "exec": "~/.config/waybar/scripts/temps.sh",
        "return-type": "json",
        "format-icons": ["", "", "", "", ""],
        "interval": 2,
        "tooltip": true,
        "format": "{icon} {text}",
        "format-icons": ["", "", "", "", ""],
        "states": {
            "critical": 80
        }
    },
    "pulseaudio": {
        "scroll-step": 5, // %, can be a float
        "format": "{icon} {volume}%",
        "format-muted": "",
        "format-icons": {
            "default": ["", "", ""]
        },
        "on-click": "pavucontrol",
        "on-click-right": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
    },
    "network#wifi": {
        "interface": "wl*",
        "format": "",
        "format-disconnected": "",
        "format-ethernet": "",
        "format-linked": "󰲊",
        "format-network-disabled": "",
        "format-wifi": "",
        "format-icons": ["󰤯", "󰤟", "󰤢", "󰤥", "󰤨"],
        "tooltip-format": "{ifname} via {gwaddr} 󰊗",
        "tooltip-format-wifi": "{essid} ({signalStrength}%) ",
        "tooltip-format-ethernet": "{ifname} ",
        "tooltip-format-disconnected": "Disconnected"
    },
    "network#wired": {
        "interface": "en*",
        "format": "",
        "format-disconnected": "",
        "format-ethernet": "󰈀",
        "format-linked": "󰲊",
        "format-network-disabled": "",
        "format-wifi": "",
        "tooltip-format": "{ifname} via {gwaddr} 󰊗",
        "tooltip-format-ethernet": "{ifname} ",
        "tooltip-format-disconnected": "Disconnected"
    },
    "bluetooth": {
        "format": "󰂯",
        "format-disabled": "󰂯",
        "format-connected": "",
        "tooltip-format": "{controller_alias}\t{controller_address}",
        "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}"
    },
    "custom/lock": {
        "tooltip": false,
        "on-click": "sh -c '(sleep 0.5s; swaylock --grace 0)' & disown",
        "format": "",
    },
    "custom/power": {
        "format" : "⏻",
        "tooltip": false,
        "menu": "on-click",
        "menu-file": "~/.config/waybar/power_menu.xml",
        "menu-actions": {
            "shutdown": "shutdown now",
            "reboot": "reboot",
            "suspend": "systemctl suspend",
            "hibernate": "systemctl hibernate",
            "exit": "hyprctl dispatch exit",
        },
    },
    "custom/vpn": {
        "format": "",
        "exec": "echo '{\"class\": \"connected\"}'",
        "exec-if": "test -d /proc/sys/net/ipv4/conf/tun0",
        "return-type": "json",
        "interval": 5,
        "tooltip": true,
        "tooltip-format": "VPN enabled",
    },
    "custom/mouse-accel": {
        "exec": "~/.config/waybar/scripts/mouse-accel.sh",
        "return-type": "json",
        "interval": 30,
        "signal": 10,
        "on-click": "~/.config/waybar/scripts/mouse-accel.sh toggle",
        "tooltip": true
    }
}
